# Firebase Configuration (Client SDK - PUBLIC, safe to expose)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain_here
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_firebase_project_id_here
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket_here
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id_here
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id_here

# Firebase Admin SDK (Server-side) - PRIVATE
# CRITICAL: This should NOT be in source control for production!
# For local development only. Production: use Vercel environment secrets.
FIREBASE_SERVICE_ACCOUNT_KEY=your_service_account_json_here

# Email Service Configuration
RESEND_API_KEY=your_resend_api_key_here
CONTACT_EMAIL=your_email@example.com

# Formspree Form ID
FORMSPREE_ID=your_formspree_form_id_here

# Upstash Redis (for rate limiting)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url_here
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token_here

# Allowed origins for form submissions (CORS protection)
# For production: use specific URLs only
# For development: include localhost variants
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.vercel.app
